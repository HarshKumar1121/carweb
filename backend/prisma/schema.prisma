
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
}

model Car {
  id          Int       @id @default(autoincrement())
  name        String
  brand       String
  model       String?
  year        Int?
  pricePerDay Float
  available   Boolean   @default(true)

  image       String?
  fuelType    String?
  seats       Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}